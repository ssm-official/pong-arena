# ===========================================
# Pong Arena — Environment Variables
# ===========================================
# Copy this to .env and fill in your values.
# NEVER commit .env to version control!

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/pong-arena

# Solana RPC (devnet for testing)
SOLANA_RPC_URL=https://api.devnet.solana.com

# $PONG token mint address (SPL token on devnet)
# Create one with: spl-token create-token --decimals 9
PONG_MINT_ADDRESS=YOUR_PONG_MINT_ADDRESS_HERE

# Treasury wallet private key (base58-encoded)
# This wallet receives fees and executes burns.
# WARNING: Keep this secret! Never commit!
TREASURY_PRIVATE_KEY=YOUR_TREASURY_PRIVATE_KEY_BASE58

# Treasury wallet public key (derived from above)
TREASURY_PUBLIC_KEY=YOUR_TREASURY_PUBLIC_KEY_HERE

# Burn address — a wallet with no known private key (tokens sent here are effectively burned)
BURN_ADDRESS=1nc1nerator11111111111111111111111111111111

# Server config
PORT=3000
NODE_ENV=development

# Auth secret for session tokens (random string)
AUTH_SECRET=change-me-to-a-random-secret-string
